{
    "manifest_version": 3,
    "name": "DLsiteEnhancer",
    "description": "DLsiteを便利にする拡張機能",
    "version": "0.0.0",
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "author": "RateteApple",
    "homepage_url": "https://github.com/RateteApple/DLsite-Enhancer",
    
    "permissions": [
        "storage",
        "tabs"
    ],

    "background": {
        "service_worker": "src/background/background.ts"
    },

    "content_scripts": [
        {
            "matches": [
                "*://www.dlsite.com/*/fsr/*", "*://www.dlsite.com/*/works/type/=/work_type_category/*", "*://www.dlsite.com/*/works/type/*"
            ],
            "js": [
                "./src/contents/dliste_search.ts"
            ],
            "run_at": "document_end"
        }
    ],

    "action": {
        "default_title": "DLsiteEnhancer",
        "default_popup": "src/popup/popup.html",
        "default_icon": "icons/48.png"
    },

    "options_page": "src/options/options.html"
}